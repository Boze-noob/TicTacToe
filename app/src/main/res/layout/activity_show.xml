<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/dark"
    tools:context=".ShowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/playerNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player name"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp">

        <com.applid.tictactoe.TicTacToeBoard
            android:id="@+id/ticTacToeBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:boardColor="@color/white"
            custom:OColor = "@color/blue"
            custom:XColor = "@color/red"
            custom:winningLineColor = "@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.3"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/playAgainBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Play again"
                android:textSize="20sp"
                android:fontFamily="@font/baloo"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/HomeBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="20sp"
                android:fontFamily="@font/baloo"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-2281074336539826/5955775662">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

</LinearLayout>